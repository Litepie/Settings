{
    "name": "litepie/settings",
    "description": "A comprehensive multi-level settings management package for Laravel",
    "type": "library",
    "keywords": ["laravel", "settings", "configuration", "multi-tenant"],
    "homepage": "https://github.com/litepie/settings",
    "license": "MIT",
    "authors": [
        {
            "name": "Litepie",
            "email": "support@litepie.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "spatie/laravel-permission": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Litepie\\Settings\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Litepie\\Settings\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Litepie\\Settings\\Providers\\SettingsServiceProvider"
            ],
            "aliases": {
                "Settings": "Litepie\\Settings\\Facades\\Settings"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
